@model IEnumerable<RCTPL_WebProjects.Models.TBL_SYSTEMUSERS>

@{
    ViewBag.Title = "Index";
    Layout = "~/Views/Shared/LayoutAdmin.cshtml";
}

<link href="//cdn.muicss.com/mui-0.2.1/css/mui.min.css" rel="stylesheet" type="text/css" />
<script src="//cdn.muicss.com/mui-0.2.1/js/mui.min.js"></script>

<div class="mui--divider-bottom">

    <h1>Search or edit users</h1>

    <form class="mui-form--inline" method="get" action="@Url.Action("MyAction", "SystemUserControl")">
        <div class="mui-textfield">
            <input type="text" name="search" @*id="search"*@ placeholder="Input username" />
        </div>
        <button class="mui-btn mui-btn--raised" type="submit">Search</button>
    </form>

    <br />

</div>

<h2>Admin control for system users</h2>
<p>
    @Html.ActionLink("Create New", "Create")
</p>
<table class="table">
    <tr>
        <th>Super Admin Tools</th>
        <th>
            @Html.DisplayNameFor(model => model.USER_CODE)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.USERNAME)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.PASSWORD)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.E_PASSWORD)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.EMAIL)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.NAME)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.CONTACT_NUMBER)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.MAILING_ADDRESS)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.DATE_REGISTERED)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.REGISTERED_BY)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.ACTIVE)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.USER_TYPE)
        </th>
        <th></th>
    </tr>

@foreach (var item in Model) {
    <tr>
        <td>
            @Html.ActionLink("Edit", "Edit", new { id = item.ADMIN_ID }) <br />
            @Html.ActionLink("Details", "Details", new { id = item.ADMIN_ID })
            @*@Html.ActionLink("Delete", "Delete", new { id = item.ADMIN_ID })*@
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.USER_CODE)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.USERNAME)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.PASSWORD)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.E_PASSWORD)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.EMAIL)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.NAME)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.CONTACT_NUMBER)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.MAILING_ADDRESS)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.DATE_REGISTERED)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.REGISTERED_BY)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.ACTIVE)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.USER_TYPE)
        </td>

    </tr>
}

</table>
